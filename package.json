{
  "name": "reflect-sync",
  "version": "0.7.2",
  "description": "Fast rsync-powered two-way sync with SQLite metadata and SSH-friendly scanning.",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "bin": {
    "reflect": "bin/reflect-sync.mjs",
    "rfsync": "bin/reflect-sync.mjs",
    "reflect-sync": "bin/reflect-sync.mjs"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist node_modules bundle",
    "test": "pnpm build && NODE_OPTIONS='--no-warnings' jest",
    "test:watch": "pnpm build &&  NODE_OPTIONS='--no-warnings' jest --watch",
    "prepublishOnly": "pnpm clean && pnpm install && pnpm build && pnpm test",
    "bundle": "pnpm rollup -c",
    "sea": "node --experimental-sea-config sea.config.json && cp $(command -v node) dist/reflect-sync && npx -y postject dist/reflect-sync NODE_SEA_BLOB dist/reflect-sync.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2"
  },
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "rsync",
    "sqlite",
    "sync",
    "watch",
    "ssh",
    "mutagen",
    "backup"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.19.0",
  "dependencies": {
    "@nodelib/fs.walk": "^3.0.1",
    "ascii-table3": "^1.0.1",
    "chokidar": "^4.0.3",
    "commander": "^14.0.2",
    "ignore": "^7.0.5"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.9.1",
    "jest": "^29.7.0",
    "rollup": "^4.52.5",
    "ts-jest": "29",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "author": "William Stein (wstein@sagemath.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/sagemathinc/reflect-sync"
  },
  "homepage": "https://github.com/sagemathinc/reflect-sync"
}
